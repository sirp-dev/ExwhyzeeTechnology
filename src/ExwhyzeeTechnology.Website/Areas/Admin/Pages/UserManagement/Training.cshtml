@page
@model ExwhyzeeTechnology.Website.Areas.Admin.Pages.UserManagement.TrainingModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">APPLICATIONS</h3>
         
        <div class="col-md-12">
            <button class="btn btn-primary">
                Total  @Model.UserDatasList.Count()
            </button>
            <button class="btn btn-primary">
                Female  @Model.UserDatasList.Count(x => x.Gender == ExwhyzeeTechnology.Domain.Enum.Enum.GenderStatus.Female)
            </button>
            <button class="btn btn-primary">
                Male  @Model.UserDatasList.Count(x => x.Gender == ExwhyzeeTechnology.Domain.Enum.Enum.GenderStatus.Male)
            </button>

        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Date
                        </th>
                        <th>
                            Fullname
                        </th>

                        <th>Email</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Course</th>
                        <th>State</th>
                        <th>LGA</th>

                        <th></th>
                    </tr>
                </thead>

                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.UserDatasList.OrderByDescending(x=>x.Date))
                    {
                        <tr>

                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LGA)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./ApplicationDetails" asp-route-id="@item.Id">Details</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>